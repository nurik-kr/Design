<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_orange_back"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginTop="19sp"
                android:src="@drawable/ic_academy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFirst"
                style="@style/TextViewMainBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11sp"
                android:text="ВИРУС ГДЕ-ТО РЯДОМ!"
                android:textColor="#FDA608"
                app:layout_constraintTop_toBottomOf="@id/image" />

            <ImageView
                android:id="@+id/strelka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/strelka_five"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFirst" />

            <TextView
                android:id="@+id/tvSecond"
                style="@style/TextViewMainBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.01"
                android:text="Ваш риск заболеть составляет\nот 50% до 70%"
                android:textColor="#FDA608"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/strelka" />

            <TextView
                android:id="@+id/tvThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/monserat_medium"
                android:gravity="center"
                android:text="Похоже, вы не очень верите в\nкоронавирус. Или хотите чтобы\nкарантин длился как можно\nдольше. \n \n Однако, заверяем, что ситуация\nочень серьезная и активно\nпризываем вас начать\nсоблюдать базовые\nрекомендации. Пожалуйста,\nобратите внимание на свой\nиммунитет и минимизируйте\nвсе физические контакты\nс миром. Это сложно, но только\nэто может помочь преодолеть\nситуацию"
                android:textColor="#25282B"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvSecond" />

            <TextView
                android:id="@+id/tvFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/monserat_medium"
                android:gravity="center"
                android:text="Один неудачный день и вы\nстанете носителем вируса,\nпоставив себя и семью под удар."
                android:textColor="#25282B"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvThird" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>





