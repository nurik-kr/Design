<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBE100">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="46dp"
        android:background="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="16dp"
                android:layout_marginTop="19sp"
                android:src="@drawable/ic_academy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFirst"
                style="@style/TextViewMainBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13sp"
                android:text="ХОДИТЕ ПО КРАЮ!"
                android:textColor="#EBE100"
                app:layout_constraintTop_toBottomOf="@id/image" />

            <ImageView
                android:id="@+id/strelka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/strelka_three"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFirst" />

            <TextView
                android:id="@+id/tvSecond"
                style="@style/TextViewMainBig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:letterSpacing="0.01"
                android:text="Ваш риск заболеть составляет\nот 30% до 50%"
                android:textColor="#EBE100"
                android:textSize="10sp"
                app:layout_constraintTop_toBottomOf="@id/strelka"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvThird"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/monserat_medium"
                android:gravity="center"
                android:text="Похоже, вы слышали про коронавирус, но вас это не напугало. Настоятельно\nпросим вас соблюдать\nбазовые меры\nбезопасности: позаботиться о своем иммунитете и минимизировать все\nфизические контакты с\nвнешним миром."
                android:textColor="#25282B"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/tvSecond" />

            <TextView
                android:id="@+id/tvFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/monserat_medium"
                android:gravity="center"
                android:text="Один неудачный день и\nвы станете носителем\nвируса, поставив себя и\nсемью под удар."
                android:textColor="#25282B"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/tvThird" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_one"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:src="@drawable/image_three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>